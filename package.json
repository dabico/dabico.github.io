{
  "name": "dabico.github.io",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "My personal website",
  "source": "index.html",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint css/*.css",
    "lint": "npm-run-all --parallel lint:*",
    "parcel:clean": "rm -rf .parcel-cache dist",
    "parcel:build": "node index.js && parcel build index.html 404.html **/*.html",
    "build": "npm-run-all parcel:clean parcel:build",
    "dev:server": "http-server dist -s -o -c-1 -p 8080",
    "dev": "npm-run-all lint build dev:server"
  },
  "staticFiles": [
    {
      "staticPath": "404.txt"
    },
    {
      "staticPath": "CNAME"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dabico/dabico.github.io.git"
  },
  "keywords": [
    "website",
    "portfolio",
    "terminal",
    "shell"
  ],
  "author": {
    "name": "Ozren DabiÄ‡",
    "email": "dabico@usi.ch",
    "url": "https://dabico.github.io"
  },
  "license": "MIT",
  "homepage": "https://dabico.github.io",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "handlebars": "^4.7.8",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "stylelint": "^16.11.0"
  }
